<div class="container">
<h1 class='my-4'>Tâche numéro <%= @task.id %></h1>
<div class='d-flex align-items-center mx-3'>
<%= @task.title %>
<%= @task.completed %>
<%= link_to 'Return to tasks', tasks_path(@tasks), class:'btn btn-secondary m-3'%>
<%= link_to 'Edit the task', edit_task_path, class:'btn btn-light m-3'%>
<%= link_to "Delete",
  task_path(@task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"},
  class:'btn btn-danger'
%>
</div>
</div>
